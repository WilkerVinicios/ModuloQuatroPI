<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Constraint"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true"
    tools:ignore="MissingConstraints">

        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/Constraint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardUseCompatPadding="true"
        tools:ignore="MissingConstraints">



        <ImageButton
            android:id="@+id/buttonCard"
            android:layout_width="401dp"
            android:layout_height="114dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:srcCompat="@color/colorAccent" />

    <ImageView
        android:id="@+id/imgView"
        android:layout_width="83dp"
        android:layout_height="72dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="8dp"
        card_view:layout_constraintBottom_toBottomOf="@+id/buttonCard"
        card_view:layout_constraintStart_toStartOf="@+id/buttonCard"
        card_view:layout_constraintTop_toTopOf="@+id/buttonCard"
        card_view:layout_constraintVertical_bias="1.0"
        card_view:srcCompat="@drawable/bike" />


    <TextView
        android:id="@+id/tx_veiculo"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_width="255dp"
        android:layout_height="63dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:lines="2"
        card_view:layout_constraintBottom_toBottomOf="@+id/buttonCard"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintHorizontal_bias="0.692"
        card_view:layout_constraintStart_toEndOf="@+id/imgView"
        card_view:layout_constraintTop_toTopOf="parent"
        card_view:layout_constraintVertical_bias="0.813" />
</androidx.constraintlayout.widget.ConstraintLayout>

